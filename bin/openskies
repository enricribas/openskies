#!/usr/bin/env ruby

def creation_message(project_name)
  m = <<-END
Project created. Thanks.

  Next Steps:

    cd #{project_name}
    gem install bundler
    bundle
    openskies server
  END
end

if ARGV.first == "new"
  project_name = ARGV[1]

  if project_name
    puts "Creating new OpenSkies project called #{project_name}..."
    `git clone git@github.com:enricribas/openskies-template.git #{project_name}`
    puts creation_message project_name
  else
    puts syntax_message
    puts "requires a project name"
  end

else
  puts "OpenSkies is calling Rails...."
  path  = `pwd`
  rails = path.chomp + "/bin/rails "

  exec rails + ARGV.join(" ")
end

